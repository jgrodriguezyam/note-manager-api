<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="AllowedFileExtensions" type="NoteManager.Infrastructure.Files.ElementConfigs.FileConfigSection" />
  </configSections>

  <AllowedFileExtensions>
    <extension name="jpg" />
    <extension name="jpeg" />
    <extension name="png" />
    <extension name="pdf" />
  </AllowedFileExtensions>

  <connectionStrings>
    <add name="ConnectionStringApi" connectionString="Server=JRODRIGUEZ-PC\SQLEXPRESS; Database=NoteManager; User Id=sa; Password=desarrollo;" providerName="System.Data.SqlClient" />
  </connectionStrings>

  <appSettings>
    <clear />
    <add key="ContentMultimedia" value="/Content/Multimedia/" />
    <add key="MaximumFileSize" value="5000000" />
    <!--Smtp Configuration-->
    <add key="SmtpHost" value="smtp.gmail.com" />
    <add key="Port" value="587" />
    <add key="UserName" value="servicio.lomsy@gmail.com" />
    <add key="Password" value="ContraLomsy" />
